@model HomeManagement.Web.Models.PumpingViewModel
@section Scripts 
{
    @Scripts.Render("~/bundles/jqueryval")
}
@section Menu
{
    @if (ViewBag.EmitModelId == true)
    {
        <ul data-role="listview" id="indexMenu">
            <li data-role="list-divider">
                Actions</li>
            <li>@Html.ActionLink("Delete", "Delete", "Pumping", new { Model.Id }, null)</li>
        </ul>
    }
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        @if (ViewBag.EmitModelId == true)
        {
            @Html.HiddenFor(model => model.Id)
        }
        <div class="editor-label">
            @Html.LabelFor(model => model.StartTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartTime)
            @Html.ValidationMessageFor(model => model.StartTime)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.EndTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndTime)
            @Html.ValidationMessageFor(model => model.EndTime)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.FortifyTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FortifyTime)
            @Html.ValidationMessageFor(model => model.FortifyTime)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Milliliters)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Milliliters)
            @Html.ValidationMessageFor(model => model.Milliliters)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.BreastfeedingAttempt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BreastfeedingAttempt)
            @Html.ValidationMessageFor(model => model.BreastfeedingAttempt)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.BreastfeedingComments)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.BreastfeedingComments)
            @Html.ValidationMessageFor(model => model.BreastfeedingComments)
        </div>
        <p>
            <input type="submit" value="@ViewBag.SubmitButtonText" />
        </p>
    </fieldset>
}