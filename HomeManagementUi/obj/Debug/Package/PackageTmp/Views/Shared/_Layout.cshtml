<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Url.Css("Site.css")
    @Url.CssTheme("jquery.ui.all.css")
    @Url.CssTheme("jquery-ui-timepicker-addon.css")
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Home Management</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Tasks", "Index", "Task")</li>
                    <li>@Html.ActionLink("People", "Index", "Person")</li>
                    <li>@Html.ActionLink("Pumping", "Index", "Pumping")</li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            @RenderSection("Footer", false)
        </footer>
    </div>
    @Url.Script("jquery-1.6.4.min.js")
    @Url.Script("modernizr-1.7.min.js")
    @Url.Script("jquery-ui-1.8.24.js")
    @Url.Script("jquery-ui-timepicker-addon.js")
    @Url.Script("HomeManagement.js")
    @RenderSection("Scripts", false)
</body>
</html>
