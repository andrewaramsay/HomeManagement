@using HomeManagement.Domain
@model Pumping
@{
    ViewBag.Title = "Edit";
}
@section Scripts
{
    @Url.Script("jquery.validate.min.js")
    @Url.Script("jquery.validate.unobtrusive.min.js")
}
<h2>
    Edit</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Pumping</legend>
        @Html.HiddenFor(model => model.Id)
        @* TODO: Figure out how to use a partial view here, and use AJAX to add new lines *@
        @if (Model.PumpingTimes != null)
        {
            for (int i = 0; i < Model.PumpingTimes.Count; i++)
            {
    
            <div class="editor-label">
                @Html.LabelFor(model => model.PumpingTimes.ElementAt(i).StartTime)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.PumpingTimes.ElementAt(i).StartTime)
                @Html.ValidationMessageFor(model => model.PumpingTimes.ElementAt(i).StartTime)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.PumpingTimes.ElementAt(i).EndTime)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.PumpingTimes.ElementAt(i).EndTime)
                @Html.ValidationMessageFor(model => model.PumpingTimes.ElementAt(i).EndTime)
            </div>
            }
        }
        <div class="editor-label">
            @Html.LabelFor(model => model.Milliliters)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Milliliters)
            @Html.ValidationMessageFor(model => model.Milliliters)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.BreastfeedingAttempt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BreastfeedingAttempt)
            @Html.ValidationMessageFor(model => model.BreastfeedingAttempt)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.BreastfeedingComments)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.BreastfeedingComments)
            @Html.ValidationMessageFor(model => model.BreastfeedingComments)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
