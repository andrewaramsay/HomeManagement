@model HomeManagement.Domain.Pumping
@{
    ViewBag.Title = "Create";
}
<h2>
    Create</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Pumping</legend>
        @* TODO: Figure out how to use a partial view here, and use AJAX to add new lines *@
        @foreach (var time in Model.PumpingTimes)
        {
            <div class="editor-field">
                @Html.EditorFor(model => time)
                @Html.ValidationMessageFor(model => time)
            </div>
        }
        <div class="editor-label">
            @Html.LabelFor(model => model.Milliliters)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Milliliters)
            @Html.ValidationMessageFor(model => model.Milliliters)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.BreastfeedingAttempt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BreastfeedingAttempt)
            @Html.ValidationMessageFor(model => model.BreastfeedingAttempt)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.BreastfeedingComments)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.BreastfeedingComments)
            @Html.ValidationMessageFor(model => model.BreastfeedingComments)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
