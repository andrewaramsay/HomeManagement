@model HomeManagement.Domain.Pumping

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Pumping</legend>

    <div class="display-label">StartTime</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PumpingTimes.FirstOrDefault().StartTime)
    </div>

    <div class="display-label">EndTime</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PumpingTimes.LastOrDefault().EndTime)
    </div>

    <div class="display-label">Milliliters</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Milliliters)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
