@model HomeManagement.Domain.Task

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Task</legend>

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    
    <div class="display-label">Assigned Person</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Person.Name)
    </div>

    <div class="display-label">DateEntered</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DateEntered)
    </div>

    <div class="display-label">DateAssigned</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DateAssigned)
    </div>

    <div class="display-label">DateCompleted</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DateCompleted)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
